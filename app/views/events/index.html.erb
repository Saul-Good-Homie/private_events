<p id="notice"><%= notice %></p>

<% if current_user %>
  Logged in as <%= current_user.username %>.
  <%= link_to "Log Out", logout_path %>
<% end %>

<table>
  <thead>
  <h4> All Events </h4>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.description, event %></td>
        <td><%= event.location %></td>
        <td><%= event.date %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<table>
  <thead>
  <h4> Past Events </h4>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @past_events.each do |event| %>
    <tr>
      <td><%= link_to event.description, event %></td>
      <td><%= event.location %></td>
      <td><%= event.date %></td>
    </tr>
  <% end %>
</tbody>
</table>

<table>
  <thead>
  <h4> Upcoming Events </h4>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @upcoming.each do |event| %>
    <tr>
      <td><%= link_to event.description, event %></td>
      <td><%= event.location %></td>
      <td><%= event.date %></td>
    </tr>
  <% end %>
</tbody>
</table>




