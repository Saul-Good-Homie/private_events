<p id="notice"><%= notice %></p>

<% if current_user %>
  Logged in as <%= current_user.username %>.
  <%= link_to "Log Out", logout_path %>
<% end %>

<h1>All Events</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.description, event %></td>
        <td><%= event.location %></td>
        <td><%= event.date %></td>
      </tr>
    <% end %>
  </tbody>

</table>

<br>

<%= link_to 'Create New Account', new_user_path %> </br>
<%= link_to 'Sign in to Existing Account', login_path %> </br>
<%= link_to 'View All Events', events_path %> </br>
<%= link_to 'Create New Event', new_event_path %> </br>
